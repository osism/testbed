---
exclude_paths:
  - .github
  - .src
  - .tox
  - contrib
  - doc
  - environments/kolla/files/overlays/ceilometer/event_definitions.yaml
  - environments/kolla/files/overlays/ceilometer/pipeline.yaml
  - environments/kolla/files/overlays/prometheus/prometheus.yml.d/50-ceph.yml
  - netbox
  - network
  - scripts
  - terraform
mock_roles:
  - manager
  - stage-output
use_default_rules: true
rulesdir:
  - ./.ansible-lint-rules/
skip_list:
  - run-once[task]
  - yaml
warn_list:
  - dummy
