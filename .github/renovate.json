{
  "extends": [
    "github>osism/renovate-config",
    "github>osism/renovate-config:python"
  ],
  "regexManagers":[
    {
      "fileMatch":[
        "^\\.github\\/workflows\\/.*\\.yml"
      ],
      "matchStrings":[
        "terraform_version: (?<currentValue>.*?)  # renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\n"
     ],
     "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "fileMatch":[
        "^\\playbooks\\/.*\\.yml"
      ],
      "matchStrings":[
        "terragrunt_version: (?<currentValue>.*?) # renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)?\\s"
      ]
    }
  ]
}
